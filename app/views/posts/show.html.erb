<h2><%= @post.title %></h2>
<p><%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.email %></p>
<p>
    <% if user_signed_in? %>
        <%= link_to "Editar", edit_post_path(@post) %>
        <%= link_to "Eliminar", post_path(@post), method: :delete, data: {confirm: "Are you sure?"} %>
    <% end %>
</p>
<p>
    <%= @post.body %>
</p>

<% if @post.comments.exists? %>
    <%= render 'comments' %>
<% end %>


<%= render 'add_comment' %>
<div class="container">
<%= form_for([@post, @post.comments.build]) do |f| %>
    <div class="form-group">
        <div>
            <%= f.text_area :comment, class: "form-control input-lg", placeholder: "Deja tu comentario" %>
        </div>
        <div class="mt-4 text-right">
            <%= f.submit "Guardar comentario", class:"btn btn-info btn-sm" %>
        </div>
    </div>
   
<% end %>
</div>

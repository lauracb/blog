<%= link_to "Nuevo Post", new_post_path%>

<% @posts.each do |post|%>
<p><%= link_to post.title, post_path(post.id) %></p>
<p><%= time_ago_in_words(post.created_at) %> ago by <%= post.user.email %></p>
<p>Cuerpo: <%= post.body %></p>
<p>
<%= link_to "Editar", edit_post_path(post) %>
<%= link_to "Eliminar", post_path(post), method: :delete, data: {confirm: "Are you sure?"} %>
</p>           
<% end %>

<%= render 'layouts/sign_in' %>
<div class="container">
  <div class="row">
    <div class="col-sm-4 offset-4 mt-5 pt-5 text-center">
    <h1 class="text-center mb-4">Registro</h1><br>
    

    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= devise_error_messages!%>
      <%= render 'layouts/alerts' %>


      <div class="field form-group">
        <strong><%= f.label :email %></strong><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control input-sm" %>
      </div>
      <br>
      <div class="field form-group">
        <strong><%= f.label :password %></strong>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control input-sm" %>
      </div>
      <br>
      <div class="field">
        <strong><%= f.label :password_confirmation %></strong><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control input-sm" %>
      </div>
      <br>
      <br>
      <div class="actions">
        <%= f.submit "Registrarse", class:"btn btn-info btn-block" %>
      </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
    <br>
    <br>
    </div>
  </div>
</div>

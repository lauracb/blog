<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>  
    <div class="container">
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <a class="navbar-brand" href="#">
              <%= link_to "Super Blog", root_path, class: "navbar-brand" %>
            </a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                  <a class="nav-link" href="#">
                    <% if signed_in?%>
                      ¡Bienvenido!
                    <% end %> 
                  </a>
                </li>
              </ul>
              <ul class="nav navbar navbar-right">
              <% if signed_in?%>
                <li>
                  <%= link_to "Salir", destroy_user_session_path, method: :delete, class:"btn btn-outline-danger my-2 my-sm-0" %>
                </li>
              <% else %>
                <li class="mr-3"><%= link_to "Regístrate", new_user_registration_path, class:"btn btn-outline-primary my-2 my-sm-0" %></li>
                <li><%= link_to "Ingresa", new_user_session_path, class:"btn btn-outline-success my-2 my-sm-0" %></li>
              <% end %>
              </ul>
            </div>
          </nav>
        </div>
      </div>
    </div>

   <%= yield %>
  </body>
</html>
